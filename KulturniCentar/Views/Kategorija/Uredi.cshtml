@model KulturniCentar.Data.Models.Kategorija

<form asp-action="Snimi">
    <input asp-for="Id" hidden />
    <div class="form-group">
        <label>Naziv :</label>
        <input asp-for="Naziv" class="form-control"  value="@Model.Naziv" required/>
    </div>
    <div class="form-group">
        <label>Opis:</label>
        <input asp-for="Opis" class="form-control"  value="@Model.Opis" required/>
    </div>
    <input type="submit" class="btn btn-info" value="Snimi" />
</form>